	<%@ include file="../layout/footer.jspf"%>
	<script type="text/javascript">
		$(function() {
			$('form .btn-group>button').eq(0).hide();
			$('form .btn-group>button').eq(1).hide();
			$('form .btn-group>a').eq(0).click(function(e) {
				e.preventDefault();
				$('form .btn-group>a').hide();
				$('form .btn-group>button').show();
				$('form input').eq(1).removeProp('readonly');
				$('form input').eq(2).removeProp('readonly');
				return false;
			});
			$('form .btn-group>a').eq(1).click(function(e) {
				alert('삭제');
				return false;
			});
		});
	</script>
