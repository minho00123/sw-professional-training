	<context:annotation-config />
	<context:component-scan
		base-package="com.my.sts" />

	<bean id="advice" class="com.my.sts.aop.MyAop"></bean>

	<aop:config>
		<aop:pointcut
			expression="execution(* com.my.sts.service.*.func*(..))" id="cut" />
		<aop:aspect ref="advice">
			<aop:before method="beforeMethod" pointcut-ref="cut" />
			<aop:after-returning method="afterReturn" pointcut-ref="cut" />
			<aop:after-throwing method="afterErr" pointcut-ref="cut" />
			<aop:after method="afterMethod" pointcut-ref="cut" />
			<aop:around method="around" pointcut-ref="cut" />
		</aop:aspect>
		<!-- <aop:advisor advice-ref="methodBeforeAdvice" pointcut-ref="cut" /> -->
	</aop:config>

	<aop:aspectj-autoproxy />

