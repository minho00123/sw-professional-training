<script type="text/javascript">
	var form, xhr;
	var callback01 = function(e) {
		xhr = new XMLHttpRequest();
		xhr.open("post", "login.jsp");
		xhr.send();
		return false;
	};
	window.onload = function() {
		form = document.querySelector("h1+form");
		form.onsubmit = callback01;
	};
</script>
