package com.myframework;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import com.my.model.DeptDto;

public class JdbcTemplate {

	private Connection conn;
	private PreparedStatement pstmt;
	String url = "jdbc:mysql://localhost:33306/xe";
	String user = "scott";
	String password = "tiger";
	private ResultSet rs;

	public int executeUpdate(String sql, Object[] arr) throws SQLException {
		try {
			conn = DriverManager.getConnection(url, user, password);
			pstmt = conn.prepareStatement(sql);
			for (int i = 0; i < arr.length; i++) {
				pstmt.setObject(i + 1, arr[i]);
			}
			return pstmt.executeUpdate();
		} finally {
			if (conn != null)
				conn.close();
		}
	}

	public List queryForList(String sql, RowMapper mapper) throws SQLException {
		return queryForList(sql, mapper, new Object[] {});
	}

	public List queryForList(String sql, RowMapper mapper, Object[] arr) throws SQLException {
		List list = new ArrayList();

		try {
			conn = DriverManager.getConnection(url, user, password);
			pstmt = conn.prepareStatement(sql);
			for (int i = 0; i < arr.length; i++) {
				pstmt.setObject(i + 1, arr[i]);
			}
			rs = pstmt.executeQuery();
			while (rs.next()) {
				Object obj = mapper.rowMap(rs);
				list.add(obj);
			}
		} finally {
			if (conn != null)
				conn.close();
		}

		return list;
	}

}
