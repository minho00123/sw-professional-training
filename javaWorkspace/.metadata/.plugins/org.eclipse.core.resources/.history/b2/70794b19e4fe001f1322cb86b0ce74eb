package com.am;

class Car {
	public String model,color;
	public int speed;
	public final int max;
	
	public Car(String color,int max) {
		this.color=color;
		this.max=max;
		if(max>200) this.model="그랜져";
		else if(max>180) this.model="";
	}
	
	public Car(String color, String model, int max) {
		this.color=color;
		this.model=model;
		this.max=max;
	}
	
	public void up() {
		if(speed+10>max) speed=max;
		else speed+=10;
	}
	public void down() {
		if(speed-10<0) speed=0;
		else speed-=10;
	}
	public void show() {
		System.out.println(color+"색 "+model+"의 속도는 "+speed+"km");
	}
}

public class Ex02 {

	public static void main(String[] args) {
		Car myCar=new Car("흰", "아반떼", 150);
		myCar.show();
		
		for(int i=0; i<30; i++) {
			myCar.up();
			myCar.show();
		}
		for(int i=0; i<30; i++) {
			myCar.down();
			myCar.show();
		}
	}

}
