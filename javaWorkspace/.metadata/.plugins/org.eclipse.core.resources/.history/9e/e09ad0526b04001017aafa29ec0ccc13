package com.am;

class MyArray {
	int[] arr=new int[0];
	
	void add(int su) {
		int[] before=arr;
		arr=new int[arr.length+1];
		for(int i=0; i<before.length; i++) {
			arr[i]=before[i];
		}
		arr[arr.length-1]=su;
	}
	int size() {
		return arr.length;
	}
	int get(int idx) {
		return arr[idx];
	}
//	void remove() {}
//	void edit() {}
}

public class Ex03 {

	public static void main(String[] args) {
		MyArray arr=new MyArray();
		arr.add(1111);
		
		for(int i=0; i<arr.size(); i++) {
			System.out.println(arr.get(i));
		}
	}

}
