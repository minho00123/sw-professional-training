		System.out.println(cal.get(Calendar.MONTH) + 1 + "월"); // 2
		System.out.println(cal.get(Calendar.DATE) + "일"); // 5
		System.out.println(cal.get(Calendar.AM_PM)==cal.get(Calendar.AM));
		System.out.println(cal.get(Calendar.AM_PM)==cal.get(Calendar.PM));
		System.out.println(cal.get(Calendar.HOUR) + "시");
		System.out.println(cal.get(Calendar.MINUTE) + "분");
