package com.am;

class Car {
	public int speed;
	public int max;
	
	public void speedUp() {
		if(speed+18>max) {
			speed=max;
		} else {
			speed+=10;
		}
	}

	public void speedDown() {
		if(speed-22<0) {
			speed=0;
		} else {
			speed-=22;
		}
	}
	public void show() {
		System.out.println("차의 속도는 "+speed+"km");
	}
}

public class Ex12 {

	public static void main(String[] args) {
		

	}

}
