		boolean boo=true;
		while(boo) {
			System.out.print("주민번호> ");
			String input=sc.nextLine();
			String[] data=input.split("-");
			if(data.length==2) {
				if(data[0].length()==6&&data[1].length()==7) {
					
				}else {
					System.out.println("포멧이 잘못됐습니다. 다시 입력하세요.");
				}
			}else {
				System.out.println("포멧이 잘못됐습니다. 다시 입력하세요.");
			}
		}
		System.out.println(age+"세 "+gender);
