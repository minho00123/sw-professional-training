package com.pm;

import java.awt.BorderLayout;
import java.awt.Button;
import java.awt.Frame;
import java.awt.GridLayout;
import java.awt.Label;
import java.awt.Panel;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;

import javax.swing.JButton;

public class Ex03 extends Frame implements Runnable, ActionListener {
	int tot;
	Label la1, la2;
	JButton[] btns;

	public Ex03() {
		btns = new JButton[16];
		setLayout(new BorderLayout());
		Panel p1 = new Panel(new GridLayout(4, 4));
		Panel p2 = new Panel(new GridLayout(2, 1));
		la1 = new Label("시간");
		la2 = new Label("점수");

		for (int i = 0; i < btns.length; i++) {
			btns[i] = new JButton(i + "");
			p1.add(btns[i]);
			btns[i].addActionListener(this);
		}

		p2.add(new Button("시작"));
		p2.add(new Button("끝"));

		add(la1, BorderLayout.NORTH);
		add(la2, BorderLayout.SOUTH);
		add(p1, BorderLayout.CENTER);
		add(p2, BorderLayout.EAST);
		setBounds(100, 100, 550, 550);
		setVisible(true);
	}

	public static void main(String[] args) {
		new Ex03();
	}

	@Override
	public void run() {

	}
	
	public void mix() {
		Random ran = new Random();
		
		int su1 = ran.nextInt(16);
		int su2 = ran.nextInt(16);
		
		JButton btn = btns[su1];
		btns[su1] = btns[su2];
		btns[su2] = btn;
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if (Integer.parseInt(e.getActionCommand()) % 2 == 0) {
			tot++;
		} else {
			tot -= 2;
		}

		la2.setText("점수:" + tot);
		revalidate();
	}

}
