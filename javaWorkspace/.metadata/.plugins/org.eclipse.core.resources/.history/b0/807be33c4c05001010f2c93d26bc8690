//}

class Ballpen {

	public void work() {
		System.out.println("글을 작성합니다");
	}
}

class Pencil {
	public void work() {
		System.out.println("그림도 그립니다");
	}
}

class Signpen {
	public void work() {
		System.out.println("싸인합니다");
	}
}

class Box<T> {
	private T pen;

	public void setPen(T pen) {
		this.pen = pen;
	}

	public T getPen() {
		return this.pen;
	}
}

public class Ex01 {

	public static void main(String[] args) {
//		Pencil pen2 = new Pencil();
//		Ballpen pen = new Ballpen();

		Box<Ballpen> box = new Box<Ballpen>();

		box.setPen(new Ballpen());

		Ballpen my = box.getPen();

		my.work();
	}

}
