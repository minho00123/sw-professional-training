package com.am;

public class Ex07 {

	public static void main(String[] args) {
		java.util.Scanner sc = new java.util.Scanner(System.in);
		System.out.print("1.가위 2.바위 3.보 0.종료>");
		int me=sc.nextInt();
		int com=1;
		
		System.out.print("me:");
		if(me==1) {
			System.out.print("가위");
		} else if(me==2) {
			System.out.print("바위");
		} else if(me==3) {
			System.out.print("보");
		}
		
		System.out.print("com:");
		if(com==1) {
			System.out.print("가위");
		} else if(com==2) {
			System.out.print("바위");
		} else if(com==3) {
			System.out.print("보");
		}
		
		if(me==com) {
			System.out.println("무");
		}
		if(me==1 && com==2) {System.out.println("패");}
		if(me==1 && com==3) {System.out.println("승");}

		if(me==2 && com==1) {System.out.println("승");}
		if(me==2 && com==3) {System.out.println("패");}
		
		if(me==3 && com==1) {System.out.println("패");}
		if(me==3 && com==2) {System.out.println("승");}
		
	}

}
