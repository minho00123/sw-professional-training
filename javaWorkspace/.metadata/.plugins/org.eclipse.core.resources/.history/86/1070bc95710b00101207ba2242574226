package com.am;

public class Ex01 extends Thread {
	static int sum;
	int begin, end;

	public Ex01(int begin, int end) {
		this.begin = begin;
		this.end = end;
	}

	public static void main(String[] args) {
		// 1~1000
		// 1~500 - Thread 1
		// 501~1000 - Thread 2

		System.out.println("sum=" + sum);
	}

	public void hap(int a, int b) {
		for (int i = a; i <= b; i++) {
			int temp = sum + i;
			sum = temp;
		}
	}

	@Override
	public void run() {
		hap(begin, end);
	}
}
