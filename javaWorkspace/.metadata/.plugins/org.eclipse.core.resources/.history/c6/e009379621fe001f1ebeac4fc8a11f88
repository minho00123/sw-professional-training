package com.am;

class Car {
	public String company="±¹»ê";
	public String color="Èò";
	public String model="???";
	public int speed;
	public int max=100;
	
	public Car(String msg, String name, int a) {
		color=msg;
		model=name;
		max=a;
	}
	
	public void speedUp(int a) {
		if (speed+a*10>max) {
			speed=max;
		} else {
			speed+=a*10;
		}
	}
	public void speedDown() {
		if (speed-15<0) {
			speed=0;
		} else {
			speed-=15;
		}
	}
	public void show() {
		System.out.println(color+"»ö ³» Â÷ "+model+"ÀÇ ¼Óµµ´Â "+speed+"km");
	}
}

public class Ex04 {

	public static void main(String[] args) {
		Car myCar=new Car("»¡°­","¸ð´×",150);
		myCar.model="±×·»Á®";
//		myCar.model="¾Æ¹Ý¶¼";
//		myCar.color="»¡°­";
//		myCar.max=150;

		for(int i=0; i<10; i++) {
			myCar.speedUp(i);
			myCar.show();
		}

		for(int i=0; i<20; i++) {
			myCar.speedDown();
			myCar.show();
		}

	}

}
