		java.util.Scanner sc;
		sc=new java.util.Scanner(System.in);
		Machine remote=null;
		
		System.out.print("1.Tv 2.audio >");
		int input=sc.nextInt();
		if(input==1) {
			remote=new Tv();
		}else {			
			remote=new Audio();
		}

		remote.on();
		remote.work();
		remote.off();
		
	}

}
