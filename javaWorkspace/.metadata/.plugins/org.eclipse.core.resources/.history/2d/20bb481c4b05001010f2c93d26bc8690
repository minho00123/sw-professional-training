package com.pm;

class Pen {
	public void work() {
		System.out.println("글을 작성합니다");
	}
}

class Ballpen extends Pen {

	public void work() {
		System.out.println("글을 작성합니다");
	}
}

class Pencil extends Pen {
	public void work() {
		System.out.println("그림도 그립니다");
	}
}

class Box {
	private Pen pen;

	public void setPen(Pen pen) {
		this.pen = pen;
	}

	public Pen getPen() {
		return this.pen;
	}
}

public class Ex01 {

	public static void main(String[] args) {
		Pencil pen2 = new Pencil();
		Ballpen pen = new Ballpen();
		Box box = new Box();

		box.setPen(pen);
		box.setPen(pen2);

		Pen my = box.getPen();
		Pen my2 = box.getPen();

		my.work();
		my2.work();
	}

}
