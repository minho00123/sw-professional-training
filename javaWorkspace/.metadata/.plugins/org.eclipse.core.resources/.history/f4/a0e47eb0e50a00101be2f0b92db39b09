class Ball implements Serializable {
	int num;
	String color;

	public Ball(int num) {
		this.num = num;
		if (num > 25) {
			color = "»¡°­";
		} else {
			color = "ÆÄ¶û";
		}
	}

	public void play() {
//		System.out.println(num + "¹ø ±¼·¯°¨");
		System.out.println(num + "¹ø ´øÁü");
	}

	@Override
	public String toString() {
		return num + "¹ø °ø";
	}
}

