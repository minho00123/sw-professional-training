package com.pm;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.InputStream;

public class Ex07 {

	public static void main(String[] args) {
//		File f = new File("data01.bin");
		File f = new File("target.txt");

		byte[] buf = new byte[8];

		InputStream is = null;

		try {
			is = new FileInputStream(f);
//			int su = is.read(buf);
//			System.out.println("su=" + su);
//			System.out.println("array=" + java.util.Arrays.toString(buf));
//			System.out.println(new String(buf, 0, su));
//			su = is.read(buf);
//			System.out.println("su=" + su);
			int su = -1;
			while((su=is.read(buf)) != -1) {
				System.out.print(new String(buf, 0, su));
			}
			is.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
