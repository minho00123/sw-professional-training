package com.am;

class Car {
	public String model,color;
	public int speed;
	public final int max;
	
	public Car(String color, String model, int max) {
		this.color=color;
		this.model=model;
		this.max=max;
	}
	
	public void up() {
		if(speed+10>max) speed=max;
		else speed+=10;
	}
	public void down() {
		if(speed-10<0) speed=0;
		else speed-=10;
	}
	public void show() {
		System.out.println(color+"»ö "+model+"ÀÇ ¼Óµµ´Â "+speed+"km");
	}
}

public class Ex02 {

	public static void main(String[] args) {
		Car myCar=new Car("Èò", "¾Æ¹Ý¶¼", 150);
		
		for(int i=0; i<30; i++) {
			myCar.up();
			myCar.show();
		}
		for(int i=0; i<30; i++) {
			myCar.down();
			myCar.show();
		}
	}

}
