package com.am;

import java.awt.Button;
import java.awt.Frame;
import java.awt.Panel;

public class Ex06 extends Frame {

	public Ex06() {
		Panel p = new Panel();
		p.setLayout(null);
		Button btn1 = new Button("btn1");
		btn1.setLocation(0, 0);
		btn1.setSize(100, 50);
		p.add(btn1);
		add(p);

		setLocation(100, 100);
		setSize(400, 300);
		setVisible(true);

		System.out.println(this.getWidth() - p.getWidth());
		System.out.println(this.getHeight() - p.getHeight());
	}

	public static void main(String[] args) {
		new Ex06();
	}

}
