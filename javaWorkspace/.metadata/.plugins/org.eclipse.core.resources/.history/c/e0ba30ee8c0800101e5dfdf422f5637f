package com.pm;

import java.awt.Frame;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Label;
import java.awt.TextField;

public class Ex12 extends Frame {

	public Ex12() {
		setLayout(new GridBagLayout());
		GridBagConstraints gbc = new GridBagConstraints();
		gbc.gridx = 0;
		gbc.gridy = 0;
		gbc.gridwidth = 1;
		gbc.gridheight = 1;
		gbc.weightx = 1.0;
		gbc.weighty = 1.0;

		for (int i = 0; i < 9; i++) {
			gbc.gridx = i;
			add(new Label(), gbc);
		}
		gbc.gridx = 0;
		gbc.gridy++;
		add(new Label("이름"), gbc);
		gbc.gridx++;
		gbc.gridwidth = 8;
		add(new TextField());
		add(new Label("아이디"));
		for (int i = 0; i < 7; i++) {
			add(new Label());
		}
		add(new Label("비밀번호"));
		for (int i = 0; i < 7; i++) {
			add(new Label());
		}
		add(new Label("전화번호"));
		add(new TextField());
		add(new Label());
		add(new Label("-"));
		add(new TextField());
		add(new Label());
		add(new Label("-"));
		add(new TextField());
		add(new Label());
		add(new Label("취미"));
		for (int i = 0; i < 3; i++) {
			add(new Label());
		}
		setLocation(100, 100);
		setSize(500, 300);
		setVisible(true);
	}

	public static void main(String[] args) {
		new Ex12();
	}

}
