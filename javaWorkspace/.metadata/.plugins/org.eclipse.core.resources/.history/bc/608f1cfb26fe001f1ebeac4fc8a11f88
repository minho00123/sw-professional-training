package com.am;

public class Ex05 {

	public static void main(String[] args) {
		// 배열
		// 자료형[] 변수명=new 자료형[갯수];
		// 변수명[index]
		// 자료형이 동일한 다중의 값을 갯수만큼 담을 수 있다
		// 
		int[] a=new int[4];
		a[0]=2;
		a[1]=4;
		a[2]=6;
		a[3]=8;
		
		for(int i=0; i<4; i++) {
			System.out.println(a[i]);
		}
	}

}
