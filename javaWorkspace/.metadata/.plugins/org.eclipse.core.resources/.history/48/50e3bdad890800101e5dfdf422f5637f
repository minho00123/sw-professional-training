package com.pm;

import java.awt.BorderLayout;
import java.awt.Button;
import java.awt.Frame;
import java.awt.GridBagLayout;
import java.awt.Panel;
import java.awt.TextField;

public class Ex10 {

	public static void main(String[] args) {
		Frame f = new Frame();
		f.setLayout(new BorderLayout());
		f.add(new TextField(), BorderLayout.NORTH);

//		String[] role = { "ESC", "*", "/", "ก็", "7", "8", "9", "-", "4", "5", "6", "+", "1", "2", "3", "=", "0", "." };
		String[][] role = { { "ESC", "*", "/", "ก็" }, { "7", "8", "9", "-" }, { "4", "5", "6", "+" },
				{ "1", "2", "3", "=" }, { "0", "." } };

		Panel center = new Panel(new GridBagLayout(5, 4));
		for (int i = 0; i < role.length; i++) {
			for (int j = 0; j < role[i].length; j++) {
				Button btn1 = new Button(role[i][j]);
				center.add(btn1, BorderLayout.CENTER);
			}
		}
		f.add(center);
		f.setLocation(100, 100);
		f.setSize(400, 500);
		f.setVisible(true);
	}

}
