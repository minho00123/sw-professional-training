package com.pm;

import java.awt.BorderLayout;
import java.awt.Frame;
import java.awt.Panel;

public class Ex09 extends Frame {

	public Ex09() {
		Panel p = new Panel();
		p.setLayout(new BorderLayout());
		Panel top = new Panel();
		Panel cen = new Panel();
		
		top.add(new TextField());
		
		p.add(top);
		p.add(cen);
		add(p);
		setLocation(100, 100);
		setSize(300, 400);
		setVisible(true);
	}

	public static void main(String[] args) {
		new Ex09();
	}

}
