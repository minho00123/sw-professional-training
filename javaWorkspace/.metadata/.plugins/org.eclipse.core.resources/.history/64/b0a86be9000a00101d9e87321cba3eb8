package com.pm;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;

public class Ex01 {

	public static void main(String[] args) {
		File file = new File("data01.bin");

		if (!file.canExecute()) {
			try {
				file.createNewFile();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}

		java.io.OutputStream os = null;

		try {
			os = new java.io.FileOutputStream(file);
			os.write('A');
			os.write('B');
			os.write('C');
			os.write('D');
			os.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
