package com.am;

class Lec06 extends Thread {
	boolean boo = true;

	public synchronized void func() {
		System.out.println(getName() + " start");
		notify(); // blocking 중 하나를 runnable 바꿈
		try {
			if (boo) {
				boo = !boo;
				wait();
			}
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		System.out.println(getName() + " end");
	}

	@Override
	public void run() {
		for (int i = 0; i < 10; i++)
			func();
	}
}

public class Ex06 {

	public static void main(String[] args) {
		Lec06 me1 = new Lec06();
		Lec06 me2 = new Lec06();
		me1.start();
		me2.start();
	}

}
