package com.pm;

import java.util.Calendar;

public class Ex01 {

	public static void main(String[] args) {
		Calendar cal = Calendar.getInstance();
		System.out.println(cal.get(Calendar.YEAR) + "년"); // 1
//		switch (cal.get(Calendar.MONTH)) {
