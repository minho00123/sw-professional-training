		System.out.println(cal.get(Calendar.MONTH) + 1 + "월"); // 2
		System.out.println(cal.get(Calendar.DAY_OF_MONTH) + "일"); // 5
		System.out.println(cal.get(Calendar.DATE) + "일"); // 5
//		System.out.println(cal.get(Calendar.AM_PM));
