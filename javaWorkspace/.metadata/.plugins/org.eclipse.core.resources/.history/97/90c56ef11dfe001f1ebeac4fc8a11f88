package com.am;

class Student {
	public int kor,eng,math,tot;
	public double avg;
	
	public Student(int a, int b, int c) {
		kor=a;
		eng=b;
		math=c;
		setTot();
	}
	
	public void setTot() {
		tot=kor+eng+math;
	}
	
	public void show() {
		System.out.println(kor+"\t"+eng+"\t"+math+"\t"+tot);
	}
}

